pipeline {
    agent any
    stages {
        stage("Docker Pull Dastardly from Burp Suite container image") {
            steps {
                sh 'docker pull public.ecr.aws/portswigger/dastardly:latest'
            }
        }
        stage("Docker run Dastardly from Burp Suite Scan") {
            steps {
                cleanWs()
                sh '''
                    docker run -v /g/BurpSuite/Workspace:/workspace:rw \
                    -e BURP_START_URL=https://ginandjuice.shop/ \
                    -e BURP_REPORT_FILE_PATH=/g/BurpSuite/Workspace/dastardly-report.xml \
                    public.ecr.aws/portswigger/dastardly:latest
                '''
            }
        }
    }
    post {
        always {
            junit testResults: '/g/BurpSuite/Workspace/dastardly-report.xml', skipPublishingChecks: true
        }
    }
}
